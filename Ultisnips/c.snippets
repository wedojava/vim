snippet fkfor "my for ( ; ; ;){ ... }"
for (${1:}; ${2:}; ${3:}) {
    ${4:}
}
endsnippet

snippet fknew "include and main" b
#include <stdio.h>
$0
int main(void) {
    $1

    return 0;
}
endsnippet

snippet fkin "#include <*.h>" b
#include <${0:string}.h>
endsnippet

snippet fkde "#define ..." b
#define $0
endsnippet

snippet fksc "scanf(1, 2)"
scanf("%${1:s}", ${2:s});
endsnippet

snippet fksw "switch( ... ){ ... }"
switch (${1:}) {
    case ${2:}: ${3:};
	break;
    default: ${4:;
	}break;
}
endsnippet
